@{
    ViewData["Title"] = "Home";
}

<!-- Custom CSS for hover animations -->
<style>
    /* Smooth scale animation */
    .hover-animate {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-animate:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container my-4">
    <!-- Jumbotron -->
    <div class="p-5 mb-4 rounded-3 hover-animate" style="background-color:#e0d4f7;">
        <div class="row align-items-center">
            <!-- Left: Profile Image -->
            <div class="col-md-3 text-center mb-3 mb-md-0">
                <img src="~/images/testAvatar.jpg" class="img-fluid rounded-circle shadow" alt="My Photo" style="max-width: 180px;">
            </div>

            <!-- Right: About Text -->
            <div class="col-md-9 text-dark">
                <h1 class="fw-bold">Hi, I'm Zako 👋</h1>
                <p class="lead">
                    I'm a software engineer specializing in C# and .NET development.
                    I enjoy building modern web applications, solving complex problems,
                    and learning new technologies every day.
                </p>
                <p>
                    When I'm not coding, you can find me exploring new tech trends,
                    reading about software architecture, or contributing to open-source projects.
                </p>
                <a class="btn text-white fw-bold mt-2" style="background-color:#6a0dad;" href="@Url.Action("Contact", "Home")">
                    Get in Touch
                </a>
            </div>
        </div>
    </div>

    <!-- Technology Icons Section -->
    <h2 class="text-center mb-4 fw-bold" style="color:#6a0dad;">Technologies I Use</h2>

    <div class="row g-4 text-center">
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/csharp.png" alt="C#" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/NET.png" alt=".NET" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/SQL.png" alt="SQL" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/js3.webp" alt="JavaScript" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/HTML5.png" alt="HTML" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <img src="~/images/Bootstrap.png" alt="CSS" class="img-fluid rounded-circle shadow mx-auto d-block hover-animate" style="width: 120px; height: 120px; object-fit: cover;">
        </div>
    </div>


    <!-- Projects Section -->
    <h2 class="text-center my-5 fw-bold" style="color:#6a0dad;">My Best Projects</h2>

    <div class="row g-4 justify-content-center">
        <!-- Project 1 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow h-100 hover-animate" style="background-color:#e0d4f7;">
                <img src="~/images/project.jpg" class="card-img-top" alt="Project One Image" style="object-fit: cover; height: 200px;">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold" style="color:#6a0dad;">Project One</h5>
                    <p class="card-text">
                        A short description of your first project. Explain what it does and why it's awesome.
                    </p>
                    <a href="#" class="btn text-white fw-bold" style="background-color:#6a0dad;">View Project</a>
                </div>
            </div>
        </div>

        <!-- Project 2 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow h-100 hover-animate" style="background-color:#e0d4f7;">
                <img src="~/images/project2b.jpg" class="card-img-top" alt="Project Two Image" style="object-fit: cover; height: 200px;">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold" style="color:#6a0dad;">Project Two</h5>
                    <p class="card-text">
                        A short description of your second project. Mention the technologies used and your role.
                    </p>
                    <a href="#" class="btn text-white fw-bold" style="background-color:#6a0dad;">View Project</a>
                </div>
            </div>
        </div>

        <!-- Project 3 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow h-100 hover-animate" style="background-color:#e0d4f7;">
                <img src="~/images/project3.jpg" class="card-img-top" alt="Project Three Image" style="object-fit: cover; height: 200px;">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold" style="color:#6a0dad;">Project Three</h5>
                    <p class="card-text">
                        A short description of your third project. Highlight what makes it unique or challenging.
                    </p>
                    <a href="#" class="btn text-white fw-bold" style="background-color:#6a0dad;">View Project</a>
                </div>
            </div>
        </div>
    </div>
</div>
