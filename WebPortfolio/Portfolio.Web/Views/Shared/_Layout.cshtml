@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color:#6a0dad;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" href="@Url.Action("Index", "Home")">MyApp</a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" href="@Url.Action("Index", "Home")"
                           onmouseover="this.style.color='#ffd700'" onmouseout="this.style.color='white'">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" href="@Url.Action("Index", "Home")"
                           onmouseover="this.style.color='#ffd700'" onmouseout="this.style.color='white'">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" href="@Url.Action("About", "Home")"
                           onmouseover="this.style.color='#ffd700'" onmouseout="this.style.color='white'">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" href="@Url.Action("Contact", "Home")"
                           onmouseover="this.style.color='#ffd700'" onmouseout="this.style.color='white'">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center text-white mt-auto py-3" style="background-color:#4b0082;">
        &copy; @DateTime.Now.Year - MyApp. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
